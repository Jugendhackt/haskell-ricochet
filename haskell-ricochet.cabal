-- Initial haskell-ricochet.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                haskell-ricochet
version:             0.1.0.0
synopsis:            ricochet reimplementation in Haskell
-- description:         
license:             GPL-3
license-file:        LICENSE
author:              ricochet-haskell team
maintainer:          git@lukasepple.de
-- copyright:           
category:            Network
build-type:          Custom
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Network.Ricochet
                     , Network.Ricochet.Types
                     , Network.Ricochet.Protocol.Lowest
                     , Network.Ricochet.Version
                     , Network.Ricochet.Monad
                     , Network.Ricochet.Connection
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base
                     , network
                     , mtl
                     , lens
                     , network-anonymous-tor
                     , transformers
                     , bytestring
                     , containers
                     , attoparsec
                     , socks
                     , hprotoc
  hs-source-dirs:      src
  default-language:    Haskell2010

executable server
  main-is:             src/Demo/Server.hs
  build-depends:       base
                     , mtl
                     , containers
                     , bytestring
                     , network
                     , haskell-ricochet
                     , lens
  default-language:    Haskell2010

executable client
  main-is:             src/Demo/Client.hs
  build-depends:       base
                     , mtl
                     , containers
                     , bytestring
                     , network
                     , haskell-ricochet
                     , lens
  default-language:    Haskell2010
